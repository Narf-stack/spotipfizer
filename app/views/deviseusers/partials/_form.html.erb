<div class="new-form">
    <%= simple_form_for(playlist) do |t| %>
        <%= t.input  :name, placeholder:"NAME", label: false, maxlength: 15, autofocus:"true", input_html: { class: "input", id: "playlist-name" } %>

        <%= t.association :genres, include_blank: false, include_hidden: false, input_html: { class: "select2" }, multiple: "multiple", label: false %>

        <div class="slider-div">
            <%= t.label :energy %>
            <%= t.input :energy, input_html: { class: 'slider', step: 1, min: 0, max: 1, value: @playlist.energy }, as: :range, label: false, type: "range" %>
            <div class="slider-bg energy" %>"></div>
        </div>


        <div class="slider-div">
            <%= t.label :valence %>
            <%= t.input :valence, input_html: { class: 'slider', step: 1, min: 0, max: 1 }, as: :range, label: false, type: "range" %>
            <div class="slider-bg valence"%>"></div>
        </div>


        <div class="slider-div">
            <%= t.label :popularity %>
            <%= t.input :popularity, input_html: { class: 'slider', step: 1, min: 0, max: 1 }, as: :range, label: false,  type: "range" %>
            <div class="slider-bg popularity" %>"></div>
        </div>


        <div class="col-12 d-flex justify-content-center mt-3">
            <%= t.submit id: 'action-button'%>
        </div> 
    <% end %>
</div>

